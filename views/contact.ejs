		<section class="ftco-section-parallax">
      <div class="parallax-img d-flex align-items-center">
        <div class="container">
          <div class="row d-flex justify-content-center">
            <div class="col-md-7 text-center heading-section heading-section-white ftco-animate">
              <h2>Subcribe to our Newsletter</h2>
              <p>Far far away, behind the word mountains, far from the countries Vokalia and Consonantia, there live the blind texts. Separated they live in</p>
              <div class="row d-flex justify-content-center mt-5">
                <div class="col-md-8">
                  <form action="#" class="subscribe-form">
                    <div class="form-group d-flex">
                      <input type="text" class="form-control" placeholder="Enter email address">
                      <input type="submit" value="Subscribe" class="submit px-3">
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    <script>
      const nombre = document.getElementById('nombre');
      const apellido = document.getElementById('apellido');
      const correo = document.getElementById('correo')
      const numero = document.getElementById('numero')
      const mensaje = document.getElementById('mensaje')
      const fechaNacimiento = document.getElementById('nacimiento');

      const regex = /^[a-zA-Z\s]+$/;
      const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
      const phoneRegex = /^[1-9]\d{8}$/;
      const messageRegex = /^.{150,}$/;
      
      nombre.addEventListener('input', () => {
        if (!regex.test(nombre.value)) {
          nombre.setCustomValidity('Ingrese solo letras y espacios');
        } else {
          nombre.setCustomValidity('');
        }
      });
      
      apellido.addEventListener('input', () => {
        if (!regex.test(apellido.value)) {
          apellido.setCustomValidity('Ingrese solo letras y espacios');
        } else {
          apellido.setCustomValidity('');
        }
      });

      correo.addEventListener('input', () => {
        if (!emailRegex.test(correo.value)) {
          correo.setCustomValidity('Ingrese un correo electrónico válido');
        } else {
          correo.setCustomValidity('');
        }
      });

      numero.addEventListener('input', () => {
        if (!phoneRegex.test(numero.value)) {
          numero.setCustomValidity('Ingrese un número de celular válido de 9 dígitos');
        } else {
          numero.setCustomValidity('');
        }
      });

      mensaje.addEventListener('input', () => {
        if (!messageRegex.test(mensaje.value)) {
          mensaje.setCustomValidity('Ingrese un mensaje de al menos 150 caracteres');
        } else {
          mensaje.setCustomValidity('');
        }
      });

      fechaNacimiento.addEventListener('input', () => {
      const hoy = new Date();
      const fechaIngresada = new Date(fechaNacimiento.value);

      // Validar que la fecha ingresada no sea mayor a la fecha actual
      if (fechaIngresada > hoy) {
        fechaNacimiento.setCustomValidity('La fecha ingresada no puede ser mayor a la fecha actual');
        return;
      }

      const anios = hoy.getFullYear() - fechaIngresada.getFullYear();
      const mes = hoy.getMonth() - fechaIngresada.getMonth();

      if (mes < 0 || (mes === 0 && hoy.getDate() < fechaIngresada.getDate())) {
        anios--;
      }

      if (anios < 18) {
        fechaNacimiento.setCustomValidity('Debe ser mayor a 18 años');
      } else {
        fechaNacimiento.setCustomValidity('');
      }
    });
    </script>
